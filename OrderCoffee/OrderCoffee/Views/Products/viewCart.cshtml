                                        <script>
                                            var cartList = JSON.parse(localStorage.getItem('cartList'));

                                            for (var item of cartList) {
                                                this.tr = $('<tr>').appendTo($('#viewCart'));
                                                this.td1 = $('<td>', { class: 'product-thumbnail' }).appendTo(this.tr);
                                                this.a1 = $('<a>').appendTo(this.td1);
                                                this.img1 = $('<img>', { src: "../" + item.Image }).appendTo(this.a1)


                                                this.td2 = $('<td>', { class: 'product-name' }).appendTo(this.tr);
                                                this.a2 = $('<a>', { text: item.Name }).appendTo(this.td2);

                                                this.td3 = $('<td>', { class: 'product-price' }).appendTo(this.tr);
                                                this.span = $('<span>', { text: item.Price + " đ", class: "amount" }).appendTo(this.td3);

                                                this.td4 = $('<td>', { class: 'product-quantity' }).appendTo(this.tr);

                                                this.input = $('<input>', { type: 'number', value: '1' }).appendTo(this.td4);

                                                this.td5 = $('<td>', { class: 'product-subtotal', text: item.Price }).appendTo(tr);

                                                this.td6 = $('<td>', { class: 'product-remove' }).appendTo(this.tr);
                                                this.aa = $('<a>').appendTo(this.td6);
                                                this.i = $('<i>', { class: "fa fa-times" }).appendTo(this.aa)
                                            }  
                                        </script> 
                                    </tbody>
